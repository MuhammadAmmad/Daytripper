<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:padding="2dp" >

        <fragment
            android:id="@+id/beyondarFragment"
            android:name="com.beyondar.android.fragment.BeyondarFragmentSupport"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:background="@drawable/radar_bg_small" >

            <com.beyondar.android.plugin.radar.RadarView
                android:id="@+id/radarView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/radar_north_small" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >

            <TextView
                android:id="@+id/textValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#40000000"
                android:textColor="#FFFFFFFF"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/minLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#BF000000"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textBarMin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:layout_weight="0.25" />

                <SeekBar
                    android:id="@+id/seekBarMin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="4dp"
                    android:maxHeight="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:progressDrawable="@drawable/slider_progress"
                    android:layout_weight="0.75" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/maxLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/minLayout"
                android:background="#40000000"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textBarMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:layout_weight="0.25" />

                <SeekBar
                    android:id="@+id/seekBarMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="4dp"
                    android:maxHeight="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:progressDrawable="@drawable/slider_progress"
                    android:layout_weight="0.75" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/arLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/maxLayout"
                android:background="#40000000"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textBarArViewDistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:layout_weight="0.25" />

                <SeekBar
                    android:id="@+id/seekBarArViewDistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="4dp"
                    android:maxHeight="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:progressDrawable="@drawable/slider_progress"
                    android:layout_weight="0.75" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zFarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/arLayout"
                android:background="#40000000"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textBarZFar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:layout_weight="0.25" />

                <SeekBar
                    android:id="@+id/seekBarZFar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="4dp"
                    android:maxHeight="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:progressDrawable="@drawable/slider_progress"
                    android:layout_weight="0.75" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:background="@drawable/round_button_bg"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="finishActivity"
        android:text="X"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>